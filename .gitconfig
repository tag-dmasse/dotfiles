[alias]
    di = diff --color
    dc = diff --cached --color
    f = fetch -p
    p = pull
    st = status

[user]
    name = Dave Masse
    email = dmasse@theatomgroup.com

[color]
    branch = auto
    diff = auto
    status = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[push]
    default = simple

[core]
    excludesfile = /home/dave/.gitignore
